@model DotNetCoreMvcPractices.ViewModels.ProductCreateViewModel
<h1>Yeni Ürün Ekle</h1>

<form asp-controller="Product"  method="post" enctype="multipart/form-data">
<input asp-for="Product.Id" type="hidden" />
<div class="form-group">   
  <label class="control-label" asp-for="Product.Name" ></label>
  <input type="text" class="form-control" asp-for="Product.Name">
</div>
<div class="form-group">   
  <label class="control-label" asp-for="Product.Price" ></label>
  <input type="number" class="form-control" asp-for="Product.Price">
</div>
<div class="form-group">   
  <label class="control-label" asp-for="Product.Stock" ></label>
  <input type="number" class="form-control" asp-for="Product.Stock">
</div>
<div class="form-group">
 <label asp-for="Product.BrandId"></label>
                <select asp-for="Product.BrandId" class="form-control"
                 asp-items="@(new SelectList(Model.Brands,"Id", "Name"))"></select>

</div>
  <div class="form-group">
            <p>Resim Ekleyebilirsiniz</p>
            <input type="file"  asp-for="ImageFile"  />
    </div>
  <div class="form-group">
            <button type="submit" class="btn btn-success" asp-action="Create">Kaydet</button>
            <button type="submit" class="btn btn-danger" asp-action="Index">İptal</button>
    </div>
</form>